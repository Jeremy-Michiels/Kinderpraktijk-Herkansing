@model Melding

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Melding</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Titel)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Titel)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Bericht)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Bericht))
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Datum)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Datum)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" aria-label="Ga terug naar meldingen overzicht">Terug</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id" aria-label="Verwijder melding">Verwijder</a>
    </div>
</div>